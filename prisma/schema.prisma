datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  id        String   @id @unique @default(uuid())
  email     String @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Tasks[]

  @@map("users")
}

model Tasks {
  id          String   @id @unique @default(uuid())
  name        String
  description String
  finished    Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       Users    @relation(fields: [userId], references: [id])
  userId      String

  @@map("tasks")
}
